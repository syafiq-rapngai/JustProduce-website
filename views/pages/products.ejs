    <script>
        function initializeProductFrames() {
            var default_SKU = "Crunchy-Classics";
            document.getElementById(default_SKU).style.display = "block";

            setTimeout(function() {save = location.hash; location.hash=''; location.hash=save;},1000);

            if(window.location.hash)
            {
                SKU = (location.hash.substr(1)).toString()
                document.getElementById(default_SKU).style.display = "none";
                document.getElementById(SKU).style.display = "block";
            	window.location.hash = SKU;
            }

            
        };


        window.onload = initializeProductFrames;

        

        function update_main_product(e){
            var products = <%- JSON.stringify(products) %>;
            target = e.target;
            for(var i=0; i<products.length; i++) {
                if (products[i].fancy_name == target.alt){
                    document.getElementById(products[i].url).style.display = "block";
                } else{
                    document.getElementById(products[i].url).style.display = "none";
                }
            }
        }
    </script>
