<div class="content-section" >

    <div class="col-12 center-col margin-70px-bottom sm-margin-60px-bottom xs-margin-50px-bottom text-center">
        <h3 class="font-weight-700 font-size32 md-font-size28 sm-font-size26 xs-font-size24 brand-colour">Have a pressing question for us?</h3>

        <h4 class="font-weight-400 font-size28 md-font-size24 sm-font-size22 xs-font-size20 brand-colour" style="padding-top: 1em;">Fill in the form below and we will get back to you ASAP</h4>
    </div>

    <div class="row">
        
        <div class="col-12">
            <form id="contact-form-input">
                <div class="form-group">
                    <div class="col-sm-2">
                        <label class="col-form-label">Inquiry: <span style="color: red;">*</span></label>
                    </div>
                    <textarea class="form-control col-md-8 col-sm-10 col-xs-12" rows=8 id="inquiry"></textarea>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class="col-form-label">Name: <span style="color: red;">*</span></label>
                    </div>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" placeholder="Your Name" name="name" id="name" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class="col-form-label">Company Name:</label>
                    </div>
                    <div class="col-sm-5">
                        <input class="form-control" type="text" placeholder="Your Company Name" name="coyname" id="coyname" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class="col-form-label">Email: <span style="color: red;">*</span></label>
                    </div>
                    <div class="col-sm-5">
                        <input class="form-control" type="email" placeholder="Your Email" name="useremail" id="useremail" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <label class="col-form-label">Phone Number: <span style="color: red;">*</span></label>
                    </div>
                    <div class="col-sm-5">
                        <input class="form-control" type="number" placeholder="Your Phone Number" name="phone" id="phone" required>
                    </div>
                </div>

                <div class="col-sm-12" style="padding-bottom: 2vh;">
                    <div id="recaptcha"></div>
                </div>

                <div class="col-sm-12" id="message" style="display:none;" style="margin-bottom: 2vh;">
                    <p id="messageText">Inquiry successfully submitted!</p>
                </div>

                <div class="col-sm-12">
                    <button id="button" type="button" class="btn btn-primary" style="margin: 0 auto;" onclick="submit_inquiry(grecaptcha.getResponse(widgetId1))">Submit</button>
                </div>
            </form>
        </div>
    </div>

</div>
